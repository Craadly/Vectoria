# Vectoria.ai Environment Configuration


# Inspiration Service Configuration
SIMILARITY_THRESHOLD=0.92              # Threshold for similarity checking (0-1, higher = stricter)
MAX_INSPIRATION_URLS=10                # Maximum number of Freepik URLs per request
INSPIRATION_CACHE_SIZE=100              # Number of feature sets to cache in memory
INSPIRATION_DOWNLOAD_TIMEOUT=15000      # Timeout for downloading Freepik images (ms)
INSPIRATION_RATE_LIMIT_DELAY=500        # Delay between Freepik requests (ms)

# Server Configuration
NODE_ENV=development
PORT=3001
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://example.com
TEMP_ACCESS_TOKEN=change_me

# Google / Imagen / Gemini
GOOGLE_PROJECT_ID= Google Cloud project identifier
GOOGLE_LOCATION= Google Cloud region (e.g., `us-central1`)
IMAGEN_MODEL_ID= Imagen model ID (e.g., `imagen-4.0-generate-001`)
GEMINI_API_KEY= Google Gemini authentication key


# Recraft (optional)
RECRAFT_API_KEY= Recraft vectorization key

# Freepik API Key for Inspiration Service
FREEPIK_API_KEY= Freepik asset inspiration key


# Recraft behavior flags
# Set to 'false' to completely disable direct text-to-SVG generation.
RECRAFT_ALLOW_DIRECT_GEN=false

RECRAFT_VECTOR_RESPONSE=b64_json   # or: url
RECRAFT_TIMEOUT_MS=120000
# RECRAFT_BASE=https://external.api.recraft.ai
